{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":semanticCommits"],
  "force": {
    "constraints": {
      "flutter": "^3.17.0-0"
    }
  },
  "schedule": ["before 4am on Monday"],
  "timezone": "Asia/Tokyo",
  "prHourlyLimit": 0,
  "rangeStrategy": "bump",
  "semanticCommits": "enabled",
  "enabledManagers": ["github-actions", "pub", "npm", "custom.regex"],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "firebase_*",
        "cloud_firestore",
        "cloud_functions"
      ],
      "groupName": "firebase"
    },
    {
      "matchPackagePatterns": [
        "freezed_annotation",
        "freezed",
        "json_annotation",
        "json_serializable"
      ],
      "groupName": "freezed"
    },
    {
      "matchPackagePatterns": ["hooks_riverpod", "riverpod_*"],
      "groupName": "riverpod"
    },
    {
      "matchPackagePatterns": ["go_router", "go_router_builder"],
      "groupName": "go_router"
    },
    {
      "matchPackagePatterns": ["_info_plus$"],
      "groupName": "info_plus"
    },
    {
      "matchPackagePatterns": ["@typescript-eslint/*", "eslint*"],
      "groupName": "eslint"
    },

    {
      "matchPackagePatterns": ["@swc/jest", "@types/jest", "jest"],
      "groupName": "jest"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^renovate.json$", "^pubspec.yaml$"],
      "matchStrings": ["\"flutter\": \"(?<currentValue>[^\"]+).*\".*"],
      "datasourceTemplate": "flutter-version"
    }
  ]
}
